{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@angular-swipe-directive/swipe-core": ["libs/swipe-core/src/index.ts"],
      "ng-swipe": ["dist/ng-swipe"],
      "ng-swipe/*": ["dist/ng-swipe/*"]
    },
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
